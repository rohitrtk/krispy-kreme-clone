---
import Navbar from "@components/Navbar.astro";

import Logo from "@assets/logo.svg";
---
<header class="flex flex-row w-full">
  <div class="container justify-center items-center m-auto">
    <div class="flex flex-row justify-between py-2">
      <div class="flex flex-row items-center gap-5">
        <a href="/">
          <img src={Logo}/>
        </a>
        <div class="items-end justify-center h-1/2">
          <button class="bg-red-600 text-white rounded-full px-5">
            <span class="text-sm">ORDER</span>
            <br>
            DELIVERY
          </button>
        </div>
      </div>
  
      <div class="flex items-end mx-10">
        <Navbar />
      </div>
    </div>
  </div>
</header>